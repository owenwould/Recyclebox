<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#80DAEB">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTeamPlayerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeaderboardTeamLeft"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTeamPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunderland"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guidelineLeaderboardTeamRight"
            app:layout_constraintStart_toEndOf="@+id/textViewTeamPlayerPosition"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTotalTeamPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Total Points: 10000XP"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineLeaderboardTeamRight"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeaderboardTeamLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeamPlayerName" />

        <TextView
            android:id="@+id/textViewTeamTotalPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Players: 1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineLeaderboardTeamRight"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeaderboardTeamLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeamTotalRecycledCount" />

        <TextView
            android:id="@+id/textViewTeamTotalRecycledCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Items Recycled: 1000"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineLeaderboardTeamRight"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeaderboardTeamLeft"
            app:layout_constraintTop_toBottomOf="@+id/textViewTotalTeamPoints" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLeaderboardTeamRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLeaderboardTeamLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05109489" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>