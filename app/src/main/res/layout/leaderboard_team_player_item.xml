<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#C5D0E6">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:text="20%"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textViewTeamTotalPlayer"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeamPlayerName" />

        <TextView
            android:id="@+id/textViewPercentageOfTotalItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="% of Team Points:"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeaderboardTeamRight2"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeamPlayerName" />

        <TextView
            android:id="@+id/textViewTeamPlayerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeaderboardTeamRight2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTeamPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Kite"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineLeaderboardTeamRight"
            app:layout_constraintStart_toEndOf="@+id/textViewTeamPlayerPosition"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTeamTotalPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="% of Team Items:"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textViewPointValue"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeamPlayerName" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLeaderboardTeamRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLeaderboardTeamRight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.025" />

        <TextView
            android:id="@+id/textViewPointValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:text="10%"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textViewPercentageOfTotalItems"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeamPlayerName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>